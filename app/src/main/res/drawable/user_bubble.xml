<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#434B51"/> <!-- Background color for user messages -->
        </shape>
    </item>
    <item
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <solid android:color="#FCFCFC"/> <!-- Same background color as above -->
            </shape>
        </rotate>
    </item>
</layer-list>
